@model IndexVM
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="text-center py-4">Most Rated Products</h1>
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model.ProductList)
    {
        <div class="col-3">
            <div class="card h-100">
                @if (item.ProductImages != null && item.ProductImages.Count() > 0)
                {
                    <img src="@item.ProductImages.FirstOrDefault().ImageURL" class="card-img-top" alt="...">
                }
                else
                {
                    <img src="https://placehold.co/500x600/png" class="card-img-top" alt="...">
                }
                
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Category.Name</p>
                    <p class="card-text">@item.Author</p>
                    <p class="card-text">@item.Price</p>
                    <small class="text-muted">Low Price : <span>@item.Price100</span></small>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">Detail</a>
                </div>
            </div>
        </div>
    }
</div>