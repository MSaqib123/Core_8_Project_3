@model ShoppingCartVM
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/fontawesome.min.css" integrity="sha512-d0olNN35C6VLiulAobxYHZiXJmq+vl+BGIgAxQtD5+kqudro/xNMvv2yIHAciGHpExsIbKX3iLg+0B6d0k4+ZA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script>
                .gradient - custom {
        /* fallback for old browsers */
        background: #6a11cb;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit - linear - gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear - gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</script>
<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div>
                <a class="btn btn-sm btn-primary" asp-area="Customer" asp-controller="Home" asp-action="Index">Back to Shoping</a>
            </div>
            @if (Model.ShoppingCartList.ToList().Count > 0)
            {
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Buyer Information</h5>
                        </div>
                        <div class="card-body">
                            
                            <!-- Single item -->
                            <div class="row">
                                <div class="col-12">
                                    <label>Name</label>
                                    <input class="form form-control" placeholder="Enter Name" asp-for="OrderHeader.Name" />
                                </div>
                                <!-- Single item -->
                                <hr class="my-2" />
                                <div class="col-12">
                                    <label>Phone</label>
                                    <input class="form form-control" placeholder="Enter Phone" asp-for="OrderHeader.PhoneNumber" />
                                </div>
                                <!-- Single item -->
                                <hr class="my-2" />
                                <div class="col-12">
                                    <label>Address</label>
                                    <input class="form form-control" placeholder="Enter Address" asp-for="OrderHeader.StreetAddress" />
                                </div>
                                <!-- Single item -->
                                <hr class="my-2" />
                                <div class="col-12">
                                    <label>City</label>
                                    <input class="form form-control" placeholder="Enter City" asp-for="OrderHeader.City" />
                                </div>
                                <!-- Single item -->
                                <hr class="my-2" />
                                <div class="col-12">
                                    <label>State</label>
                                    <input class="form form-control" placeholder="Enter State" asp-for="OrderHeader.State" />
                                </div>
                                <!-- Single item -->
                                <hr class="my-2" />
                                <div class="col-12">
                                    <label>Postal Code</label>
                                    <input class="form form-control" placeholder="Enter PostalCode" asp-for="OrderHeader.PostCode" />
                                </div>
                            </div>
                            
                            
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            Estimated Arrival Date
                            @DateTime.Now.AddDays(7).ToString() - @DateTime.Now.AddDays(13).ToShortDateString()
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Products
                                    <span>$@Model.OrderHeader.OrderTotal.ToString()</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping
                                    <span>Gratis</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong>$@Model.OrderHeader.OrderTotal.ToString()</strong></span>
                                </li>
                            </ul>

                            <a asp-action="CheckOut" class="btn btn-primary btn-lg btn-block">
                                Buy Product
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <h1 class="display-5">There is No Any Cart</h1>
            }
        </div>
    </div>
</section>