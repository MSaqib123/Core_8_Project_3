@model Company

<form asp-action="Upsert" asp-controller="Company" method="post" enctype="multipart/form-data">
    <div class="row mt-5">

        <h1>@(Model.Id > 0 ? "Update" : "Add") Company</h1>

        <input type="hidden" asp-for="Id" />

        <div class="col-9">
            <div class="row">

                <div class="col-6 my-4">
                    <label class="form-label" asp-for="Name"></label>
                    <input type="text" class="form-control" placeholder="" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-6 my-4">
                    <label class="form-label" asp-for="City"></label>
                    <input type="text" class="form-control" placeholder="" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-12 my-4">
                    <label class="form-label" asp-for="StreetAddress"></label>
                    <textarea class="form-control" placeholder="" asp-for="StreetAddress" rows="3">
                    </textarea>
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-6 my-4">
                    <label class="form-label" asp-for="State"></label>
                    <input type="text" class="form-control" placeholder="" asp-for="State">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-6 my-4">
                    <label class="form-label" asp-for="PostalCode"></label>
                    <input type="text" class="form-control" placeholder="" asp-for="PostalCode">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="col-6 my-4">
                    <label class="form-label" asp-for="PhoneNumber"></label>
                    <input type="text" class="form-control" placeholder="" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="col-6 my-4">
            <button type="submit" class="btn btn-primary">
                @(Model.Id > 0 ? "Update" : "Add") Product
            </button>
        </div>
    </div>
</form>


@*__________ Client Side Validation ______________*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
