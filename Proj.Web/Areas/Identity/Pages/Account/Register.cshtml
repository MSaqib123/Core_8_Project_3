@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}




<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-content-center mt-5 align-items-center h-100">
            <div class="col-md-8 col-lg-8 col-xl-7">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <h1 class="text-center">@ViewData["Title"] - ADMIN PORTAL</h1>
                    }
                    else{
                        <h1>@ViewData["Title"]</h1>
                    }
                    <div class="row">

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Name input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.Name" type="text" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a Name" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Email input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.Email" type="email" id="form3Example3" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a valid email address" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>



                        <!-- Password input -->
                        <div class="col-6 mb-3">
                            <div class="form-outline mb-3">
                                <input asp-for="Input.Password" type="password" id="form3Example4" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Password input -->
                        <div class="col-6 mb-3">
                            <div class="form-outline mb-3">
                                <input asp-for="Input.ConfirmPassword" type="password" id="form3Example4" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter ConfirmPassword" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Address input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.Address" id="form3Example3" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a address" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- City input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.City" id="form3Example3" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a City" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- City input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.State" id="form3Example3" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a State" />
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- PostalCode input -->
                        <div class="col-6 mb-3 mt-3">
                            <div class="form-outline ">
                                <input asp-for="Input.State" id="form3Example3" class="form-control form-control-lg" aria-required="true"
                                       placeholder="Enter a PostalCode" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                        </div>



                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <div class="col-6 mb-3">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                    <option>---- Select Role ----</option>
                                </select>
                            </div>

                            <div class="col-6 mb-3">
                                <select asp-for="Input.CompanyId" style="display:none" asp-items="@Model.Input.CompanyList" class="form-select">
                                    <option>---- Select Company ----</option>
                                </select>       
                            </div>
                        }


                        <div class="col-6  class=" text-center"">
                            <div class="text-center text-lg-start">
                                <button class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;" type="submit">
                                    Register
                                </button>
                                <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Alrady have an account? <a asp-area="Identity" asp-page="/Account/Login" class="link-danger">Login</a>
                                </p>
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
            <div class="col-md-4 col-lg-4 col-xl-4 offset-xl-1">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#Input_Role").change(function () {
                var selection = $("#Input_Role Option:Selected").text();
                if (selection == "Company") {
                    $("#Input_CompanyId").show();
                }
                else {
                    $("#Input_CompanyId").val = 0;
                    $("#Input_CompanyId").hide();
                }
            })
        })
    </script>
}
